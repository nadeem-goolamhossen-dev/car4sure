{% extends 'dashboard/index.html.twig' %}

{% block dashboardBody %}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6">
            <div class="card text-center">
                <div class="card-body text-bg-success">
                    <h5>Policies</h5>
                    <h3 class="mt-3 mb-3">{{ countPolicies }}</h3>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card text-center">
                <div class="card-body text-bg-warning">
                    <h5>Vehicles</h5>
                    <h3 class="mt-3 mb-3">{{ countVehicles }}</h3>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}